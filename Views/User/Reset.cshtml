@{
    ViewData["Title"] = "ResetPassword";
}
<!DOCTYPE html>
<html>
<head>
    <title>Reset Password</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/css/style1.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-6 d-none d-md-block infinity-image-container"></div>
            <div class="col-lg-6 col-md-6 infinity-form-container" style="background-color:#17a2b8">
                <div class="col-lg-9 col-md-12 col-sm-9 col-xs-12 infinity-form">
                    <div class="text-center mb-4">
                        <h4>Reset Your Password</h4>
                    </div>
                    <form class="px-3" method="post" action="@Url.Action("ResetPassword", "User")">
                        <div class="form-input">
                            <span><i class="fa fa-lock"></i></span>
                            <input type="password" name="password" placeholder="New Password" required>
                        </div>
                        <div class="form-input">
                            <span><i class="fa fa-lock"></i></span>
                            <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-block">Reset Password</button>
                        </div>
                        <div class="text-right">
                            <a asp-area="" asp-controller="User" asp-action="Login" class="forget-link">Back to Login</a>
                        </div>
                        <div class="text-center mb-2">
                            <div class="text-center mb-2 text-white">or reset using</div>
                            <div class="social-buttons">
                                <a href="https://www.facebook.com/" class="btn btn-social btn-facebook"><i class="fa fa-facebook"></i> Facebook</a>
                                <a href="https://www.google.com/" class="btn btn-social btn-google"><i class="fa fa-google"></i> Google</a>
                                <a href="https://x.com/" class="btn btn-social btn-twitter"><i class="fa fa-twitter"></i> Twitter</a>
                            </div>
                        </div>
                        <div class="text-center mb-5 text-white">
                            Don't have an account?
                            <a class="register-link" asp-area="" asp-controller="User" asp-action="Register">Register here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
